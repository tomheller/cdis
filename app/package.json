{
  "name": "cdis",
  "version": "1.0.0",
  "description": "Community driven interactive story",
  "author": "tomheller",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
